<%-include('../partial/dashHeader'); %>

<div class="content-wrapper">
    <div class="container">
   <!-- <div class="row pad-botm">
       <div class="col-md-12">
           <h4 class="header-line">TABLE EXAMPLES</h4>
        </div>
   </div> -->
<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                ShowingProperties 
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>S.no</th>
                                <th>Picture1</th>
                                <th>Picture2</th>
                                <th>Picture3</th>
                                <th>Picture4</th>
                                <th>PropertyName</th>
                                <th>PropertyType</th>
                                <th>PropertyFor</th>
                                <th>PropertyPrice</th>
                                <th>Edit|Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(var x=0;x < data.length;x++){%>
                            <tr class="odd gradeX">
                                <td class="center"><%= x+1%></td>
                                <td><img src='<%= data[x].pic1%>' width="100px" height="100px;"></td>
                                <td><img src='<%= data[x].pic2%>' width="100px" height="100px;"></></td>
                                <td><img src='<%= data[x].pic3%>' width="100px" height="100px;"></td></td>
                                <td><img src='<%= data[x].pic4%>' width="100px" height="100px;"></td></td>
                                <td class="center"><%= data[x].pname%></td>
                                <td class="center"><%= data[x].ptype%></td>
                                <td class="center"><%= data[x].pfor%></td>
                                <td class="center"><%= data[x].price%></td>
                                <td class="center"><a href="/property/editProperty/<%= data[x]._id%>">Edit</a> | <a href="/property/deleteProperty/<%= data[x]._id%>">Delete</a> </td>
                            </tr>
                            <%}%>
                        </tbody>
                    </table>
                    <div class="text-center">
                        <% if (pages > 0) { %>
                        <ul class="pagination">
                          <% if (current == 1) { %>
                            <li class="page-item disabled"><a class="page-link">First</a></li>
                        <% } else { %>
                            <li><a class="page-link" href="/property/showUserProperty?page=1">First</a></li>
                        <% } %>
                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                        <% if (i !== 1) { %>
                            <li class="page-item disabled"><a>...</a></li>
                        <% } %>
                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                                <li class="page-item active"><a class="page-link"><%= i %></a></li>
                            <% } else { %>
                                <li><a class="page-link" href="/property/showUserProperty?page=<%= i %>"><%= i %></a></li>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < pages) { %>
                                <li class="page-item disabled"><a class="page-link">...</a></li>
                            <% } %>
                        <% } %>
                        <% if (current == pages) { %>
                            <li class="page-item disabled"><a class="page-link">Last</a></li>
                        <% } else { %>
                            <li><a class="page-link" href="/property/showUserProperty?page=<%= pages %>">Last</a></li>
                        <% } %>
                        </ul>
                        <% } %>
                      </div>  
                </div>
            </div>
        </div>
        <!--End Advanced Tables -->
       </div>
       </div>
    </div>
</div>

<%-include('../partial/dashFooter'); %>